{
  "name": "redux-lite-action",
  "version": "1.1.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "prepare": "tsc && prettier --config package.json --write dist/index.d.ts",
    "prettier": "prettier --config package.json --write '{src,tests}/**/*.ts'",
    "test": "run-s test:*",
    "test:build": "tsc --noEmit src/index.ts tests/index.spec.ts",
    "test:lint": "tslint -c tslint.json '{src,tests}/**/*.ts'",
    "test:unit": "jest"
  },
  "dependencies": {
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/redux": "^3.6.0",
    "jest": "^22.4.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.1",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "prettier": {
    "printWidth": 100,
    "jsxBracketSameLine": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
